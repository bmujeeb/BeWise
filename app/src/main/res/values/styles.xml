<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="ListItemsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="ListItemsLabelStyle" parent="@style/ListItemsStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">3dip</item>
    </style>

    <style name="ListItemsValueStyle" parent="@style/ListItemsStyle">
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingRight">3dip</item>
    </style>

    <style name="TransactionsDialogStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TransactionAddDialogLabelStyle" parent="@style/TransactionsDialogStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="TransactionAddDialogValueStyle" parent="@style/TransactionsDialogStyle">
        <item name="android:paddingRight">3dip</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="TransactionDetailsDialogLabelStyle" parent="@style/TransactionsDialogStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="TransactionDetailsDialogValueStyle" parent="@style/TransactionsDialogStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
    </style>

</resources>